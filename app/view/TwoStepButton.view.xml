<mvc:View
    controllerName="dev.carlosorozco.ui5Extra.samples.controller.TwoStepButton"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:ui5Extra="ui5Extra.TwoStepButton">

    <semantic:SemanticPage>
        <semantic:titleHeading>
            <Title
                text="ui5Extra.TwoStepButton.TwoStepButton"
                level="H2" />
        </semantic:titleHeading>
        <semantic:headerContent>
            <ObjectAttribute
                title="module"
                text="ui5Extra/TwoStepButton/TwoStepButton" />
        </semantic:headerContent>
        <semantic:content>
            <layout:Grid>
                <VBox>
                    <Title text="Basic" />
                    <ui5Extra:TwoStepButton
                        initialText="Remove"
                        initialIcon="sap-icon://delete"
                        initialTooltip="Do you want to remove this item?"
                        initialType="Transparent"
                        finalText="多Confirm?"
                        finalIcon="sap-icon://delete"
                        finalTooltip="Are you sure?"
                        finalType="Negative"
                        finalPress="pressRemoveFinal"
                        busyIndicatorDelay="0" />

                    <ui5Extra:TwoStepButton
                        initialIcon="sap-icon://accept"
                        initialType="Default"
                        initialTooltip="Do action?"
                        initialPress="pressInitial"
                        finalIcon="sap-icon://message-information"
                        finalType="Emphasized"
                        finalTooltip="Are you sure?"
                        finalPress="pressActionFinal"
                        busyIndicatorDelay="0"
                        busyIndicatorSize="Small" />

                    <ui5Extra:TwoStepButton
                        initialText="Confirm"
                        initialIcon="sap-icon://save"
                        initialType="Accept"
                        initialTooltip="Do you want to confirm?"
                        initialPress="pressInitial"
                        finalText="多Are you sure?"
                        finalIcon="sap-icon://alert"
                        finalType="Critical"
                        finalTooltip="Are you sure?"
                        finalPress="pressConfirmFinal"
                        stepDuration="5000"
                        busyIndicatorDelay="0" />
                </VBox>
                <VBox>
                    <Title text="Load bar" />
                    <ui5Extra:TwoStepButton
                        initialText="Remove"
                        initialIcon="sap-icon://delete"
                        initialTooltip="Do you want to remove this item?"
                        initialType="Transparent"
                        finalText="多Confirm?"
                        finalIcon="sap-icon://delete"
                        finalTooltip="Are you sure?"
                        finalType="Negative"
                        finalPress="pressRemoveFinal"
                        busyIndicatorDelay="0"
                        showLoadBar="true" />

                    <ui5Extra:TwoStepButton
                        initialIcon="sap-icon://accept"
                        initialType="Default"
                        initialTooltip="Do action?"
                        initialPress="pressInitial"
                        finalIcon="sap-icon://message-information"
                        finalType="Emphasized"
                        finalTooltip="Are you sure?"
                        finalPress="pressActionFinal"
                        busyIndicatorDelay="0"
                        busyIndicatorSize="Small"
                        showLoadBar="true" />

                    <ui5Extra:TwoStepButton
                        initialText="Confirm"
                        initialIcon="sap-icon://save"
                        initialType="Accept"
                        initialTooltip="Do you want to confirm?"
                        initialPress="pressInitial"
                        finalText="多Are you sure?"
                        finalIcon="sap-icon://alert"
                        finalType="Critical"
                        finalTooltip="Are you sure?"
                        finalPress="pressConfirmFinal"
                        stepDuration="5000"
                        busyIndicatorDelay="0"
                        showLoadBar="true" />
                </VBox>
                <VBox>
                    <Title text="Enabled" />
                    <ui5Extra:TwoStepButton
                        enabledStep="false"
                        initialText="One step"
                        initialType="Emphasized"
                        initialTooltip="Not enabled step"
                        initialPress="pressNoStep"
                        stepDuration="1500" />
                    <ui5Extra:TwoStepButton
                        initialText="Disabled"
                        initialType="Emphasized"
                        enabled="false"
                        initialTooltip="Disabled" />
                </VBox>
            </layout:Grid>
        </semantic:content>

    </semantic:SemanticPage>

</mvc:View>