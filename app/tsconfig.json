{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "rootDir": "./webapp",
    "baseUrl": "./",
    "paths": {
      "ui5/typescript/helloworld/*": ["./webapp/*"]
    },
    "typeRoots": ["node_modules/@types", "node_modules/@carlosorozco"]
  },
  "include": ["./webapp/**/*"]
}
